{
  "repository": {
    "type": "git",
    "url": "https://github.com/Collin-M-Brown/Git-Changes-Highlighter/tree/main/git-highlighter"
  },
  "name": "git-highlighter",
  "displayName": "Git Highlighter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-highlighter.test1",
        "title": "git-highlighter: test1"
      },
      {
        "command": "git-highlighter.highlightLine",
        "title": "git-highlighter: Highlight Line"
      },
      {
        "command": "git-highlighter.highlightCommits",
        "title": "git-highlighter: Highlight Commits"
      },
      {
        "command": "git-highlighter.test2",
        "title": "git-highlighter: test2"
      }
    ],
    "configuration": [
      {
        "title": "Git Highlighter",
        "properties": {
          "git-highlighter.highlightColor": {
            "type": "string",
            "default": "#2259b27e",
            "description": "The color to use for highlights"
          },
          "git-highlighter.commitListPath": {
            "type": "string",
            "default": null,
            "description": "The path where the commit names are stored"
          },
          "git-highlighter.highlightList": {
            "type": "array",
            "default": [],
            "description": "The commits you wish to highlight",
            "items": {
              "type": "string"
            }
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yourViewContainer",
          "title": "Your View Container",
          "icon": "$(file-directory)"
        }
      ]
    },
    "views": {
      "yourViewContainer": [
        {
          "id": "yourView",
          "name": "Your View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}
