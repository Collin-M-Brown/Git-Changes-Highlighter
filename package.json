{
    "repository": {
        "type": "git",
        "url": "https://github.com/Collin-M-Brown/Git-Vision"
    },
    "name": "GitVision",
    "displayName": "Git Vision",
    "description": "Highlight git blame data for multiple commits at once. Like a selective heatmap",
    "icon": "./images/Git_vision_Logo.png",
    "publisher": "collin-m-brown",
    "version": "1.0.2",
    "engines": {
        "vscode": "^1.81.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "GitVision.openGitRepo",
                "title": "Open a Git Repository",
                "icon": {
                    "light": "./images/run_light.svg",
                    "dark": "./images/run_dark.svg"
                },
                "when": "!isGitRepository"
            },
            {
                "command": "GitVision.highlightCommits",
                "title": "GitVision: Highlight From List",
                "icon": {
                    "light": "./images/run_light.svg",
                    "dark": "./images/run_dark.svg"
                }
            },
            {
                "command": "GitVision.clearAll",
                "title": "GitVision: Clear All Highlights",
                "icon": {
                    "light": "./images/clear-all-light.svg",
                    "dark": "./images/clear-all-dark.svg"
                }
            },
            {
                "command": "GitVision.hideHighlights",
                "title": "GitVision: Hide Highlights",
                "icon": {
                    "light": "./images/debug-reverse-continue.svg",
                    "dark": "./images/debug-reverse-continue.svg"
                }
            },
            {
                "command": "GitVision.highlightLine",
                "title": "GitVision: Highlight Line"
            },
            {
                "command": "GitVision.collapseAll",
                "title": "min",
                "icon": {
                    "light": "./images/minus_light.svg",
                    "dark": "./images/minus_dark.svg"
                }
            },
            {
                "command": "GitVision.expandAll",
                "title": "max",
                "icon": {
                    "light": "./images/plus_light.svg",
                    "dark": "./images/plus_dark.svg"
                }
            },
            {
                "command": "GitVision.filterCommitRepository",
                "title": "filterCommitRepository",
                "icon": {
                    "light": "./images/filter_light.svg",
                    "dark": "./images/filter_dark.svg"
                }
            },
            {
                "command": "GitVision.openSettings",
                "title": "settings"
            }
        ],
        "configuration": [
            {
                "title": "Git Highlighter",
                "properties": {
                    "GitVision.highlightColor": {
                        "type": "string",
                        "default": "#2259b27e",
                        "description": "The color to use for highlights",
                        "scope": "application"
                    },
                    "GitVision.enableRealtimeHighlighting": {
                        "title": "Enable Realtime Highlighting",
                        "type": "boolean",
                        "default": false,
                        "description": "Enables real time highlighting (This can put a load on the system)"
                    },
                    "GitVision.filterString": {
                        "title": "Filter String for commit repo",
                        "description": "Filters Commit Repository based on search string",
                        "type": "string",
                        "default": ""
                    },
                    "GitVision.bundleMergedBranches": {
                        "title": "Bundles Merged Branches",
                        "type": "boolean",
                        "default": true,
                        "description": "Bundles branches together when adding merged commit to list"
                    },
                    "GitVision.showDebugInfoMessages": {
                        "title": "Show Additional Info Popups",
                        "type": "boolean",
                        "default": false,
                        "description": "Show Additional Info Popups for debugging purposes"
                    },
                    "GitVision.findRenamedFiles": {
                        "title": "Find Renamed Files",
                        "type": "boolean",
                        "default": true,
                        "description": "Will find git blame even if file was moved into a different folder or renamed. This uses a fair bit more processing power. If you know the commits you are looking for are in files that have not been removed or renamed, you can disable this to increase the parsing speed."
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "GitVision",
                    "title": "Git Vision",
                    "icon": "$(eye)"
                }
            ]
        },
        "views": {
            "GitVision": [
                {
                    "id": "gitHighlightsView",
                    "name": "Files with changes"
                },
                {
                    "id": "CommitView",
                    "name": "Commit Watch List"
                },
                {
                    "id": "CommitRepo",
                    "name": "Commit Repository"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "CommitRepo",
                "contents": "No Git repository detected.\n[Open Folder](command:workbench.action.files.openFolder)",
                "when": "!GitVision.isGitRepository"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "GitVision.collapseAll",
                    "when": "view == gitHighlightsView",
                    "group": "navigation@1"
                },
                {
                    "command": "GitVision.expandAll",
                    "when": "view == gitHighlightsView",
                    "group": "navigation@2"
                },
                {
                    "command": "GitVision.highlightCommits",
                    "when": "view == CommitView",
                    "group": "navigation@1"
                },
                {
                    "command": "GitVision.openSettings",
                    "when": "true",
                    "group": "1_navigation"
                },
                {
                    "command": "GitVision.clearAll",
                    "when": "view == CommitView",
                    "group": "navigation@3"
                },
                {
                    "command": "GitVision.hideHighlights",
                    "when": "view == CommitView",
                    "group": "navigation@2"
                },
                {
                    "command": "GitVision.filterCommitRepository",
                    "when": "view == CommitRepo",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.81.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@vscode/test-electron": "^2.3.4",
        "eslint": "^8.47.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@types/lodash": "^4.14.198",
        "ignore": "^5.2.4",
        "lodash": "^4.17.21",
        "simple-git": "^3.19.1"
    }
}
